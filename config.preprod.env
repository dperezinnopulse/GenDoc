# Configuración para entorno de preproducción
ENVIRONMENT=preprod
DEBUG=false
LOG_LEVEL=INFO

# Configuración del servidor
HOST=0.0.0.0
PORT=8080

# Configuración de seguridad
SECRET_KEY=your-secret-key-for-preprod-change-this-in-production
ALLOWED_ORIGINS=*

# Configuración de almacenamiento
STORAGE_PATH=/app/storage
TEMPLATES_PATH=/app/storage/templates

# Configuración de LibreOffice
SOFFICE_PATH=/usr/bin/soffice
SOFFICE_POOL_SIZE=3

# Configuración de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de logs
LOG_FILE=/app/logs/gendoc.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
